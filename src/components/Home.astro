<style>
    .circle{
        justify-content: center;
        align-items: center;
        height: 100px;
        width: 100px;
        background-image: linear-gradient(var(--bg-dark), var(--bg));
        position: absolute;
        top: 12%;
        right: 2%;
        border-radius: 50%;
        animation: beat 2s;
        transform-origin: center;
    }
    #repo{
        font-size: 2.5rem;
        animation: beat 2s;
        transform-origin: center;
